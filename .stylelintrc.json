{
    "extends": "stylelint-config-standard-scss",
    "plugins": ["stylelint-scss"],
    "rules": {
      "indentation": 2,
      "color-named": "never",
      "max-nesting-depth": 3,
      "block-no-empty": true,
      "scss/at-rule-no-unknown": true,
      "scss/dollar-variable-pattern": "^[a-z-]+$"
    },
    "overrides": [
      {
        "files": ["**/*.scss"],
        "customSyntax": "postcss-scss"
      }
    ]
  }
  